@model IEnumerable<PerfumeStore.Domain.Entities.Perfume>

@{
    ViewBag.Title = "Admin panel: items list";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="navbar navbar-inverse">
        <h3 style="color:cornsilk; margin:10px">Admin panel: Perfume list</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">ID</th>
                <th>House name</th>
                <th>Perfume name</th>
                <th>Concentration</th>
                <th>Category</th>
                <th>Longevity</th>
                <th>Sillage</th>
                <th>Gender</th>
                <th>Volume</th>
                <th>Country</th>
                <th class="text-center">Price</th>
                <th class="text-center">Actions</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">@item.PerfumeId</td>
                    <td>@item.HouseName</td>
                    <td>@Html.ActionLink(item.PerfumeName, "Edit", new { item.PerfumeId })</td>
                    <td>@item.Concentration</td>
                    <td>@item.Category</td>
                    <td>@item.Longevity</td>
                    <td>@item.Sillage</td>
                    <td>@item.Gender</td>
                    <td>@item.Volume</td>
                    <td>@item.Country</td>
                    <td class="text-center">@item.Price.ToString("# $")</td>
                    <td class="text-center">
                        @using (Html.BeginForm("Delete", "Admin"))
                        {
                            @Html.Hidden("GameId", item.PerfumeId)
                            <input type="submit"
                                   class="btn btn-default btn-xs"
                                   value="Удалить" />
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Add perfume", "Create", null,
            new { @class = "btn btn-primary" })
    </div>
</div>