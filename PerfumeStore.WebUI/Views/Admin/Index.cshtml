@model IEnumerable<PerfumeStore.Domain.Entities.Perfume>

@{
    ViewBag.Title = "Admin panel: Item list";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default" 
     style="border-color:transparent">
    <div class="navbar navbar-inverse navbar-static-top" style="width:100%">
        <h4 style="color:cornsilk; margin:15px"><strong><u>Admin panel: Perfume list</u></strong></h4>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">ID</th>
                <th>House name</th>
                <th>Perfume name</th>
                <th>Concentration</th>
                <th>Category</th>
                <th>Longevity</th>
                <th>Sillage</th>
                <th>Gender</th>
                <th>Volume</th>
                <th>Country</th>
                <th class="text-center">Price</th>
                <th class="text-center">Actions</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">@item.PerfumeId</td>
                    <td>@item.HouseName</td>
                    <td>@Html.ActionLink(item.PerfumeName, "Edit", new { item.PerfumeId })</td>
                    <td>@item.Concentration</td>
                    <td>@item.Category</td>
                    <td>@item.Longevity</td>
                    <td>@item.Sillage</td>
                    <td>@item.Gender</td>
                    <td>@item.Volume</td>
                    <td>@item.Country</td>
                    <td class="text-center">@item.Price.ToString("# $")</td>
                    <td class="text-center">
                        @using (Html.BeginForm("Delete", "Admin"))
                        {
                            @Html.Hidden("PerfumeId", item.PerfumeId)
                            <input type="submit"
                                   class="btn btn-danger btn-xs"
                                   value="Delete" />
                        }
                    </td>
                </tr>
            }
        </table>
    </div>

    <div class="panel-footer navbar navbar-inverse" style="nav-down">
        @Html.ActionLink("Add perfume", "Create", null,
            new { @class = "btn btn-primary" })

        @Html.ActionLink("Home", "/", null, new
           {
                @class = "btn btn-default"
           })
    </div>

</div>

<footer class="text-center label-info" 
        style="background-color:transparent; width:100%">
    <strong><u><i>© Copyright 2023 by Royal Fragrance Team. All Rights Reserved.</i></u></strong>
</footer>

