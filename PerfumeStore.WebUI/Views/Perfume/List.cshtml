@using PerfumeStore.WebUI.Models
@model PerfumeListViewModel

@{
    ViewBag.Title = "Fragrances";
}

@foreach (var p in @Model.Perfumes)
{
    <div>
        <hr />
        <h3><u>@p.Name</u></h3>
        <p>@p.Description</p>
        <p>Longevity - @p.Longevity, Sillage - @p.Sillage</p>
        <p>Country - @p.Country, Volume - @p.Volume, Gender - @p.Gender</p>
        <h4>Actual price - @p.Price.ToString("# $")</h4>
        <hr />
    </div>
}

<div>
    @Html.PageLinks(Model.PagingInfo, x => Url.Action("List", new {page = x}))
</div>