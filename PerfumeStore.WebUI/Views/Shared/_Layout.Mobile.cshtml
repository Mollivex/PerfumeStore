<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet"
          href="http://code.jquery.com/mobile/1.3.2/jquery.mobile-1.3.2.min.css" />
    <script src="http://code.jquery.com/jquery-1.9.1.min.js"></script>
    <script src="http://code.jquery.com/mobile/1.3.2/jquery.mobile-1.3.2.min.js"></script>
    <title>@ViewBag.Title</title>
</head>
<body background="~/Content/Images/background1.jpg"
      style="background-size: cover;
             background-attachment:fixed;
             background-repeat:no-repeat;
             background-position:center">

    <div data-role="page" id="page1" 
         class="navbar navbar-inverse" 
         role="navigation" style="width:100%">

        <div data-theme="a" data-role="header" data-position="fixed" 
             style="width:100%">

            <h3>Royal Fragrance</h3>
            @Html.Action("MenuConcentration", "Nav")
            @Html.Action("MenuCategory", "Nav")
            @Html.Action("MenuGender", "Nav")
            @Html.Action("MenuCountry", "Nav")

        </div>

        <div data-role="content">
            <ul data-role="listview" data-divider-theme="b" data-inset="false">
                @RenderBody()
            </ul>
        </div>

    </div>
</body>
</html>
